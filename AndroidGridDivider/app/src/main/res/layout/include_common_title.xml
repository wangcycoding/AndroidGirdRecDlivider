<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginTop="@dimen/immersive_value"
    android:background="@color/theme_color">


    <LinearLayout
        android:id="@+id/ll_leftback"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_title_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>
    </LinearLayout>



    <TextView
        android:id="@+id/tv_title_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:text="登录"/>

    <LinearLayout
        android:id="@+id/ll_title_right"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="7dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="登录"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_title_right1"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_marginRight="7dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_title_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_title_right2"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@+id/ll_title_right1"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_title_right2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</RelativeLayout>